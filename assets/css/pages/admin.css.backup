/* í† ìŠ¤íŠ¸ ì»¨í…Œì´ë„ˆ */
.toast-container {
    position: fixed;
    z-index: 999999;
    pointer-events: none;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    max-width: 420px;
    width: 100%;
}

/* ìœ„ì¹˜ë³„ ì»¨í…Œì´ë„ˆ */
.toast-top-right {
    top: 1rem;
    right: 1rem;
}

.toast-top-left {
    top: 1rem;
    left: 1rem;
}

.toast-bottom-right {
    bottom: 1rem;
    right: 1rem;
    flex-direction: column-reverse;
}

.toast-bottom-left {
    bottom: 1rem;
    left: 1rem;
    flex-direction: column-reverse;
}

/* ê¸°ë³¸ í† ìŠ¤íŠ¸ ìŠ¤íƒ€ì¼ */
.admin-toast {
    pointer-events: auto;
    background: white;
    border-radius: 0.75rem;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border: 1px solid #e5e7eb;
    overflow: hidden;
    opacity: 0;
    transform: translateX(100%);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    min-width: 320px;
    max-width: 420px;
}

.admin-toast.toast-show {
    opacity: 1;
    transform: translateX(0);
}

.admin-toast.toast-hide {
    opacity: 0;
    transform: translateX(100%);
    margin-bottom: -100px;
}

/* í† ìŠ¤íŠ¸ ë‚´ìš© */
.toast-content {
    display: flex;
    align-items: flex-start;
    padding: 1rem;
    gap: 0.75rem;
}

.toast-icon {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
    margin-top: 0.125rem;
}

.toast-message {
    flex: 1;
    font-size: 0.875rem;
    line-height: 1.5;
    font-weight: 500;
}

.toast-close {
    flex-shrink: 0;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 0.25rem;
    transition: background-color 0.2s ease;
    opacity: 0.6;
}

.toast-close:hover {
    opacity: 1;
    background-color: rgba(0, 0, 0, 0.05);
}

/* ì§„í–‰ë°” */
.toast-progress {
    height: 3px;
    background-color: rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.toast-progress-bar {
    height: 100%;
    width: 100%;
    transition: width linear;
}

/* íƒ€ì…ë³„ ìŠ¤íƒ€ì¼ */
