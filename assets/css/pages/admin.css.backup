/**
 * 관리자 페이지 완전한 스타일 - 모달 문제 해결 버전
 * cert-management 및 모든 관리자 페이지 전용 스타일 포함
 */

/* =================================== */
/* 기본 관리자 레이아웃 */
/* =================================== */

.admin-layout {
    min-height: 100vh;
    background-color: #f7fafc;
}

/* 관리자 헤더 */
.admin-header {
    background-color: #4c51bf;
    color: white;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    position: relative;
    z-index: 1020;
}

.admin-title {
    font-size: 1.25rem;
    font-weight: bold;
    white-space: nowrap;
    color: white !important;
    text-decoration: none !important;
}

.admin-title:hover,
.admin-title:active,
.admin-title:focus {
    color: white !important;
    text-decoration: none !important;
}

/* 사용자 정보 영역 */
.admin-user-info {
    display: flex !important;
    opacity: 1 !important;
    visibility: visible !important;
    animation: fadeIn 0.3s ease-in-out;
}

#admin-name,
#admin-email,
#admin-logout-button {
    opacity: 1 !important;
    visibility: visible !important;
}

/* 관리자 사이드바 */
.admin-sidebar {
    background-color: #2d3748;
    color: white;
    min-height: calc(100vh - 4rem);
    width: 256px;
    transition: transform 0.3s ease, left 0.3s ease-in-out;
    overflow-y: auto;
    overflow-x: hidden;
}

.admin-nav a {
    transition: all 0.2s ease;
    display: block;
    padding: 0.75rem 1.5rem;
    color: #cbd5e0;
    text-decoration: none;
}

.admin-nav a:hover {
    background-color: #4a5568;
    color: white;
}

.admin-nav a.active {
    background-color: #5a67d8;
    color: white;
}

/* 사이드바 사용자 정보 */
.sidebar-user-info {
    opacity: 1 !important;
    visibility: visible !important;
    padding: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    margin-bottom: 1rem;
    background-color: rgba(0, 0, 0, 0.2);
    animation: fadeIn 0.3s ease-in-out;
}

.sidebar-user-info .font-bold,
.sidebar-user-info .text-indigo-200,
.sidebar-user-info #sidebar-logout-button {
    opacity: 1 !important;
    visibility: visible !important;
}

/* 사이드바 토글 버튼 */
.admin-toggle-button {
    display: none;
    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: white;
    font-size: 24px;
    cursor: pointer;
    z-index: 1041;
    width: 32px;
    height: 32px;
    padding: 0;
    line-height: 1;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: background-color 0.2s ease;
}

.admin-toggle-button:hover {
    background-color: rgba(255, 255, 255, 0.1);
}

.admin-toggle-button:focus {
    outline: 2px solid rgba(255, 255, 255, 0.5);
    outline-offset: 2px;
}

/* 사이드바 오버레이 */
.admin-sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1025;
    display: none;
    opacity: 0;
    transition: opacity 0.3s ease;
    cursor: pointer;
    touch-action: none;
}

.admin-sidebar-overlay.active {
    display: block;
    opacity: 1;
}

/* =================================== */
/* 관리자 콘텐츠 및 컴포넌트 */
/* =================================== */

.admin-content {
    padding: 2rem;
    background-color: #f7fafc;
    min-height: calc(100vh - 4rem);
}

/* 알림 영역 */
.admin-notification {
    margin-bottom: 1rem;
    padding: 1rem;
    border-radius: 0.375rem;
    border: 1px solid transparent;
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 50000;
    max-width: 400px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.admin-notification.success {
    background-color: #c6f6d5;
    border-color: #9ae6b4;
    color: #22543d;
}

.admin-notification.error {
    background-color: #fed7d7;
    border-color: #feb2b2;
    color: #742a2a;
}

.admin-notification.warning {
    background-color: #fefcbf;
    border-color: #faf089;
    color: #744210;
}

.admin-notification.info {
    background-color: #bee3f8;
    border-color: #90cdf4;
    color: #2c5282;
}

/* 통계 카드 */
.stat-card {
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    padding: 1.5rem;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.stat-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
}

/* 관리자 버튼 */
.admin-btn {
    padding: 0.5rem 1rem;
    border-radius: 0.375rem;
    font-weight: 500;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    text-decoration: none;
}

.admin-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

.admin-btn-primary {
    background-color: #4c51bf;
    color: white;
}

.admin-btn-primary:hover:not(:disabled) {
    background-color: #434190;
}

.admin-btn-secondary {
    background-color: #e2e8f0;
    color: #4a5568;
}

.admin-btn-secondary:hover:not(:disabled) {
    background-color: #cbd5e0;
}

.admin-btn-danger {
    background-color: #e53e3e;
    color: white;
}

.admin-btn-danger:hover:not(:disabled) {
    background-color: #c53030;
}

/* 데이터 테이블 */
.admin-table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
}

.admin-table th {
    background-color: #f7fafc;
    padding: 0.75rem 1rem;
    text-align: left;
    font-weight: 600;
    color: #4a5568;
    border-bottom: 2px solid #e2e8f0;
    font-size: 0.875rem;
}

.admin-table td {
    padding: 0.75rem 1rem;
    border-bottom: 1px solid #e2e8f0;
    font-size: 0.875rem;
}

.admin-table tr:hover {
    background-color: #f7fafc;
}

/* =================================== */
/* Course Management 전용 스타일 */
/* =================================== */

.course-modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    overflow-y: auto;
}

.course-modal.hidden {
    display: none;
}

.course-modal-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: -1;
}

.course-modal-content {
    background-color: white;
    border-radius: 0.5rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    max-width: 48rem;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    position: relative;
    z-index: 1;
}

.course-modal-header {
    display: flex;
    items-center: center;
    justify-content: space-between;
    padding: 1.5rem;
    border-bottom: 1px solid #e2e8f0;
}

.course-modal-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1a202c;
    margin: 0;
}

.course-modal-close {
    background: none;
    border: none;
    color: #a0aec0;
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 0.25rem;
    transition: color 0.2s ease;
}

.course-modal-close:hover {
    color: #718096;
}

/* 과정 폼 스타일 */
.course-form {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.form-row-triple {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1rem;
}

.form-field {
    display: flex;
    flex-direction: column;
}

.form-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    margin-bottom: 0.5rem;
}

.required {
    color: #ef4444;
}

.form-input,
.form-select {
    padding: 0.5rem 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 0.375rem;
    font-size: 0.875rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    background-color: white;
}

.form-input:focus,
.form-select:focus {
    outline: none;
    border-color: #6366f1;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.form-input:disabled,
.form-select:disabled {
    background-color: #f9fafb;
    color: #6b7280;
    cursor: not-allowed;
}

/* 자동 생성 정보 안내 */
.auto-generation-info {
    background-color: #f0f9ff;
    border: 1px solid #bae6fd;
    border-radius: 0.375rem;
    padding: 1rem;
    margin-top: 0.5rem;
}

.auto-generation-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #0c4a6e;
    margin: 0 0 0.5rem 0;
}

.auto-generation-list {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.75rem;
    color: #0369a1;
    line-height: 1.5;
}

.auto-generation-list li {
    margin-bottom: 0.25rem;
}

.auto-generation-list li:before {
    content: "• ";
    font-weight: bold;
    margin-right: 0.25rem;
}

/* 제목 미리보기 */
.title-preview {
    margin-top: 0.5rem;
    padding: 0.5rem;
    background-color: #f0f9ff;
    border-radius: 0.25rem;
    font-size: 0.875rem;
    border-left: 3px solid #3b82f6;
}

/* 폼 액션 버튼 */
.form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 0.75rem;
    padding-top: 1rem;
    border-top: 1px solid #e2e8f0;
    margin-top: 1rem;
}

/* 상태 뱃지 */
.status-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
}

.status-badge.status-preparing {
    background-color: #fef3c7;
    color: #92400e;
}

.status-badge.status-active {
    background-color: #dcfce7;
    color: #166534;
}

.status-badge.status-closed {
    background-color: #fecaca;
    color: #991b1b;
}

.status-badge.status-completed {
    background-color: #dbeafe;
    color: #1e40af;
}

.status-badge.status-upcoming {
    background-color: #f3e8ff;
    color: #7c3aed;
}

.status-badge.status-urgent {
    background-color: #fed7aa;
    color: #ea580c;
}

.status-badge.status-available {
    background-color: #dcfce7;
    color: #166534;
}

/* 액션 버튼 */
.action-btn {
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    border: none;
    cursor: pointer;
    background: none;
}

.action-btn:hover {
    text-decoration: underline;
}

/* 페이지네이션 */
.admin-pagination {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.25rem;
    margin-top: 2rem;
}

.admin-pagination-btn {
    padding: 0.5rem 0.75rem;
    border: 1px solid #e2e8f0;
    background-color: white;
    color: #4a5568;
    border-radius: 0.375rem;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.875rem;
    min-width: 2.5rem;
    text-align: center;
}

.admin-pagination-btn:hover {
    background-color: #f7fafc;
}

.admin-pagination-btn.active {
    background-color: #4c51bf;
    border-color: #4c51bf;
    color: white;
}

.admin-pagination-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
}

/* =================================== */
/* 🔧 Certificate Management 모달 시스템 완전 수정 */
/* admin.css의 기존 cert-management 관련 CSS를 이것으로 교체 */
/* =================================== */

/* 기본 모달 오버레이 (최우선 순위) */
#cert-issue-modal,
#bulk-issue-modal {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    z-index: 999999 !important;
    background-color: rgba(0, 0, 0, 0.75) !important;
    backdrop-filter: blur(4px) !important;
    display: none !important;
    align-items: center !important;
    justify-content: center !important;
    padding: 1rem !important;
    overflow-y: auto !important;
}

/* 모달 표시 상태 */
#cert-issue-modal:not(.hidden),
#bulk-issue-modal:not(.hidden) {
    display: flex !important;
}

/* 모달 컨테이너 */
#cert-issue-modal .relative,
#bulk-issue-modal .relative,
#cert-issue-modal > div:first-child,
#bulk-issue-modal > div:first-child {
    background: white !important;
    border-radius: 0.75rem !important;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important;
    border: 1px solid #e5e7eb !important;
    width: 100% !important;
    max-width: 32rem !important;
    max-height: 90vh !important;
    overflow: hidden !important;
    position: relative !important;
    margin: auto !important;
    animation: modalFadeIn 0.3s ease-out !important;
}

/* 대형 모달 (일괄 발급) */
#bulk-issue-modal .relative,
#bulk-issue-modal > div:first-child {
    max-width: 56rem !important;
}

/* 모달 페이드인 애니메이션 */
@keyframes modalFadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* 모달 헤더 */
#cert-issue-modal .p-6:first-child,
#bulk-issue-modal .p-6:first-child {
    padding: 1.5rem 1.5rem 1rem 1.5rem !important;
    border-bottom: 1px solid #e5e7eb !important;
    background-color: #f9fafb !important;
}

#cert-issue-modal h3,
#bulk-issue-modal h3 {
    font-size: 1.25rem !important;
    font-weight: 600 !important;
    color: #1f2937 !important;
    margin: 0 !important;
}

/* 모달 닫기 버튼 */
#cert-issue-modal .text-gray-400,
#bulk-issue-modal .text-gray-400 {
    background: none !important;
    border: none !important;
    color: #9ca3af !important;
    cursor: pointer !important;
    padding: 0.5rem !important;
    border-radius: 0.375rem !important;
    transition: all 0.2s ease !important;
    position: absolute !important;
    top: 1rem !important;
    right: 1rem !important;
    z-index: 10 !important;
}

#cert-issue-modal .text-gray-400:hover,
#bulk-issue-modal .text-gray-400:hover {
    color: #6b7280 !important;
    background-color: #f3f4f6 !important;
}

/* 모달 바디 */
#cert-issue-modal .p-6:not(:first-child),
#bulk-issue-modal .p-6:not(:first-child) {
    padding: 1.5rem !important;
    overflow-y: auto !important;
    max-height: 60vh !important;
}

/* 폼 스타일 */
#cert-issue-modal form,
#bulk-issue-modal .space-y-4 {
    display: flex !important;
    flex-direction: column !important;
    gap: 1.25rem !important;
}

#cert-issue-modal .space-y-4 > div,
#bulk-issue-modal .space-y-4 > div {
    display: flex !important;
    flex-direction: column !important;
    gap: 0.5rem !important;
}

#cert-issue-modal label,
#bulk-issue-modal label {
    display: block !important;
    font-size: 0.875rem !important;
    font-weight: 600 !important;
    color: #374151 !important;
    margin-bottom: 0.5rem !important;
}

#cert-issue-modal input,
#cert-issue-modal select,
#bulk-issue-modal input,
#bulk-issue-modal select {
    width: 100% !important;
    padding: 0.75rem !important;
    border: 2px solid #e5e7eb !important;
    border-radius: 0.5rem !important;
    font-size: 0.875rem !important;
    transition: all 0.2s ease !important;
    background-color: white !important;
}

#cert-issue-modal input:focus,
#cert-issue-modal select:focus,
#bulk-issue-modal input:focus,
#bulk-issue-modal select:focus {
    outline: none !important;
    border-color: #6366f1 !important;
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1) !important;
    background-color: #fefefe !important;
}

/* 버튼 영역 */
#cert-issue-modal .flex.justify-end,
#bulk-issue-modal .flex.justify-end {
    display: flex !important;
    justify-content: flex-end !important;
    gap: 0.75rem !important;
    padding: 1.5rem !important;
    border-top: 1px solid #e5e7eb !important;
    background-color: #f9fafb !important;
    margin: 0 !important;
}

#cert-issue-modal button,
#bulk-issue-modal button {
    padding: 0.75rem 1.5rem !important;
    border-radius: 0.5rem !important;
    font-weight: 600 !important;
    font-size: 0.875rem !important;
    transition: all 0.2s ease !important;
    border: 2px solid transparent !important;
    cursor: pointer !important;
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    min-width: 100px !important;
}

/* 취소 버튼 */
#cert-issue-modal button[type="button"]:first-of-type,
#bulk-issue-modal button[type="button"]:first-of-type {
    background-color: white !important;
    color: #374151 !important;
    border-color: #d1d5db !important;
}

#cert-issue-modal button[type="button"]:first-of-type:hover,
#bulk-issue-modal button[type="button"]:first-of-type:hover {
    background-color: #f9fafb !important;
    border-color: #9ca3af !important;
}

/* 확인/발급 버튼 */
#cert-issue-modal button[type="submit"],
#cert-issue-modal button[type="button"]:last-of-type,
#bulk-issue-modal button[type="button"]:last-of-type {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    color: white !important;
    border-color: transparent !important;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1) !important;
}

#cert-issue-modal button[type="submit"]:hover,
#cert-issue-modal button[type="button"]:last-of-type:hover,
#bulk-issue-modal button[type="button"]:last-of-type:hover {
    background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%) !important;
    box-shadow: 0 6px 8px -1px rgba(0, 0, 0, 0.15) !important;
    transform: translateY(-1px) !important;
}

/* =================================== */
/* 🎯 Certificate Table 반응형 개선 */
/* =================================== */

/* 자격증 테이블 기본 스타일 */
#cert-table {
    width: 100%;
    border-collapse: collapse;
    background-color: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
}

#cert-table th {
    background-color: #f8fafc;
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    color: #374151;
    border-bottom: 2px solid #e5e7eb;
    font-size: 0.875rem;
    white-space: nowrap;
}

#cert-table td {
    padding: 1rem;
    border-bottom: 1px solid #f3f4f6;
    font-size: 0.875rem;
    vertical-align: middle;
}

#cert-table tr:hover {
    background-color: #f9fafb;
}

/* 모바일에서 테이블 카드 변환 */
@media (max-width: 768px) {
    #cert-table {
        display: block;
        width: 100%;
    }

    #cert-table thead {
        display: none;
    }

    #cert-table tbody {
        display: block;
        width: 100%;
    }

    #cert-table tr {
        display: block;
        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 0.75rem;
        margin-bottom: 1rem;
        padding: 1.25rem;
        box-shadow: 0 2px 4px 0 rgba(0, 0, 0, 0.1);
    }

    #cert-table tr:hover {
        background: #f9fafb;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.15);
        transition: all 0.2s ease;
    }

    #cert-table td {
        display: block;
        width: 100%;
        padding: 0.75rem 0;
        border: none;
        text-align: left;
        position: relative;
        padding-left: 40%;
    }

    #cert-table td:before {
        content: attr(data-label);
        position: absolute;
